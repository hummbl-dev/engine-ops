{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "isolatedModules": true
    },
    "include": [
        "core",
        "schemas",
        "public",
        "infra",
        "tools",
        "k8s-operator"
    ],
    "typedocOptions": {
        "entryPoints": [
            "public/api.ts"
        ],
        "out": "docs/api"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}